{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "src"
  },
  "include": ["**/*.ts", "**/*.tsx", ".eslintrc.js"],
  "exclude": ["ios", "node_modules", "android"]
}
